<div class="page-header">
 <h1>All Comments</h1>
</div>

<%= link_to "Post a New Comment", new_comment_path, class: "btn btn-success" %>

<% @comments.each do |comment| %>
<div class='comment'>
  <div class='row'>
    <div class="span1">
      <%# link_to image_tag comment.user.gravitar_url %> 
     <img src="http://i.imgur.com/PIEmo2x.jpg">
    </div>
    <div class='span7'>
      <strong>Name: <%= comment.user.full_name %></strong>
      <p><%= comment.content %></p>
      <div class='meta'>
        <%= link_to time_ago_in_words(comment.created_at) + " ago", comment %> |
        <span class='admin'>
         <%= link_to "Edit", edit_comment_path(comment) %> |
        <%= link_to "Delete", comment, method: :delete, data: { confirm: "Are you sure you want to delete this comment"} %>
        </span>
      </div>
    </div>
  </div> 
</div>
<% end  %>