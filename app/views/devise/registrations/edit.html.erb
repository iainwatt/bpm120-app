<h2>Edit Profile</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<%= f.text_field :first_name, :placeholder => "First Name" %>
<%= f.text_field :last_name, :placeholder => "Surname" %>
<%= f.text_field :profile_name, :placeholder => "Profile Name" %>
<%= f.text_field :about, :placeholder => "About" %>
<%= f.file_field :user_image, :placeholder => "Image" %>
<%= f.text_field :email, :placeholder => "email" %>
<%= f.text_field :password, :placeholder => "password", :autocomplete => :off %>
<%= f.text_field :password_confirmation, :placeholder => "password", :autocomplete => :off %>
<%= f.submit 'Sign Up' %>
  
<% end %>

<%= render "devise/shared/links" %>


<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

