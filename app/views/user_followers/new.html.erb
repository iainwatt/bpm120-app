<%= if @follower %>
<h1><%= @follower.full_name %></h1>

<p>Do you really want to follow <%= @friend.full_name %>?</p>

<%= form_for @user_follower, method: :post do |form| %>
    <div class='form form-actions'>
      <%= form.hidden_field :follower_id, value: @follower %>
      <%= submit_tag "Follow", class: 'btn btn-primary' %>
      <%= link_to "Cancel", profile_path(@follower), class: 'btn' %>
    </div>
 <% end %>
<% end  %>