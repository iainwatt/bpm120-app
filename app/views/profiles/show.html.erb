
<div class='page-header'>
  <h1><%= @user.full_name %></h1>
  

<%  if @user.id != current_user.id %>
<%#= simple_form_for(@user_follower) do |f| %>
<%#= f.hidden_field :follower_id, value: params[:id] or f.id %>
<%#= f.hidden_field :user_id, value: current_user.id %>
<%#= f.button :submit, class: "btn btn-success" %>
<%= link_to "Follow", new_user_follower_path(followerd_id: @user), class: 'btn' %>
<% end %>
<%# end %>
</div>



 <div class="row-fluid">
  <div class="span12">
    <div class="span2">
  
      <%= image_tag @user.user_image.url  %>
                   
    </div>
    <div class="span8">
      <% if @songs  %>
        <% @songs.each do |song| %>
        <div class='well'>
          <%= song.artist %>  
            <hr />
            <%= audio_tag song.sound_file, autoplay: false, controls: true  %>
            <hr />
          <%= link_to song.title, song_path(song) %>
        </div>
         <% end %>
         <% end %>
         <% if @comments %>
        
        <h3>Favourites</h3>
        <% @user.favourites.each do |d|  %>
        <p><%= d.song.title  %></p>
        <% end  %>


        <h3>Comments</h3>
         <% @comments.each do |comment|  %>
        <div class='well'>
          <%= comment.content %>
        
          <hr />
          <%= link_to time_ago_in_words(comment.created_at), comment_path(comment) %>
          </div>  
          <% end  %>
          <% end %>   
    </div>  
    <div class="span2">
      <h2>Friends</h1>
    </div>     
  </div>
</div>




                  